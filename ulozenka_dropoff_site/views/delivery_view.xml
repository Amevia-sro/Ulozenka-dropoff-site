<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="inherit_view_delivery_carrier_form" model="ir.ui.view">
        <field name="name">inherit.view.delivery.carrier.form</field>
        <field name="model">delivery.carrier</field>
        <field name="inherit_id" ref="delivery.view_delivery_carrier_form"/>
        <field name="arch" type="xml">
            <field name="active" position="after">
                <field name="dropoff_site"/>
            </field>
            <xpath expr="//page[@name='destination']" position="after">
                <page string="Site Addresses" attrs="{'invisible': [('dropoff_site', '!=', True)]}">
                    <field name="partner_ids" domain="[('type', '=', 'delivery')]" options="{'no_create': True}"/>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
